<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="..." alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">Equipment: {{item.equipment}}</h5>
    <p class="card-text">Quantity: {{item.quantity}}</p>
    <p class="card-text">Supplier: {{item.supplier}}</p>
    <p class="card-text">Category: {{item.category}}</p>
    <p class="card-text">Description: {{item.description}}</p>
    <p class="card-text">Item no.: {{item._id}}</p>

      <div class="d-flex">
        <div id="edit-delete" class="d-flex flex-row">
          <a href="/update/{{item._id}}" class="me-1">
            <button type="button" class="btn btn-secondary">
              <i class="bi bi-pen"></i>
            </button>
          </a>
          <form action="/api/items/delete/{{item._id}}" method="POST" class="ms-1">
            <button onclick="return confirm('Are you sure?');" type="submit" class="btn btn-danger">
              <i name="delete-item" value="delete-item" class="bi bi-trash"></i>
            </button>
          </form>
        </div>
      </div>
  </div>
</div>